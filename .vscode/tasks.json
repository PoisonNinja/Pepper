{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "command": "make",
            "problemMatcher": {
                "fileLocation": [
                    "absolute"
                ],
                "base": "$gcc"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Clean",
            "type": "shell",
            "command": "make",
            "args": [
                "clean"
            ],
            "problemMatcher": []
        },
        {
            "label": "Launch QEMU",
            "type": "shell",
            "command": "make",
            "args": [
                "qemu"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "problemMatcher": {
                "fileLocation": [
                    "absolute"
                ],
                "base": "$gcc"
            }
        },
        {
            "label": "Launch QEMU remote",
            "type": "shell",
            "isBackground": true,
            "command": "make",
            "args": [
                "remote"
            ],
            "problemMatcher": {
                "fileLocation": [
                    "absolute"
                ],
                "base": "$gcc"
            }
        }
    ]
}